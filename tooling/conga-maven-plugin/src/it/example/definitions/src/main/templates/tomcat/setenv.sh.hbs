# Java environment to use for the tomcat instance
JAVA_HOME="{{jvm.path}}"

# Path where to store PID file
CATALINA_PID="{{tomcat.path}}/catalinarunning.pid"

# Heap space and permgen space memory settings for JVM
CATALINA_OPTS="-Xms{{jvm.heapspace.min}} -Xmx{{jvm.heapspace.max}} -XX:MaxPermSize={{jvm.permgenspace.max}}"

# JVM optimization settings: Enable G1 garbage collector
CATALINA_OPTS="$CATALINA_OPTS -XX:+UseG1GC"
